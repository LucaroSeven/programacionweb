@model List<TestApp.Library.DAL.Models.CustomFiles>
@{
    ViewData["Title"] = "Custom Files";
}

<div class="text-center">
    <h1 class="display-4">Lista de Archivos</h1>
</div>

<div class="text-right mb-2">
    <a asp-action="Create" class="btn btn-success">Subir Archivo</a>
</div>

<div>
    <table class="table table-dark table-hover table-sm table-responsive">
        <thead>
            <tr>
                <th scope="col">Id</th>
                <th scope="col">Descripción</th>
                <th scope="col">Ruta</th>
                <th scope="col">Estatus</th>
                <th scope="col">Creación</th>
                <th></th>
                <th></th>
                <th></th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var user in Model)
            {
                <tr>
                    <td>@user.customfile_id</td>
                    <td>@user.description</td>
                    <td>@user.path</td>

                    @if (user.is_active == true)
                    {
                        <td>
                            <label class="text-success">Impreso</label>
                        </td>
                    }
                    else
                    {
                        <td>
                            <label class="text-danger">No impreso</label>
                        </td>
                    }

                    <td>@user.created_at</td>

                    <td>
                        <a asp-action="Details" asp-route-id="@user.customfile_id">Detalles</a>
                    </td>
                    <td>
                        <a asp-action="Edit" asp-route-id="@user.customfile_id">Editar</a>
                    </td>
                    <td>
                        <a asp-action="DetailsDelete" asp-route-id="@user.customfile_id">Borrar</a>
                    </td>
                    <td>
                        <a target="_blank" asp-action="DownloadFile" asp-route-id="@user.customfile_id">Descargar</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

