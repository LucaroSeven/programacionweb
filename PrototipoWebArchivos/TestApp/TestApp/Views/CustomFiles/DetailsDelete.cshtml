@model TestApp.Library.DAL.Models.CustomFiles
<dl>
    <dt>ID:</dt>
    <dd>@Model.customfile_id</dd>

    <dt>Description:</dt>
    <dd>@Model.description </dd>

    <dt>Path:</dt>
    <dd>@Model.path</dd>

    <dt>Is active?:</dt>
    @{
        if (!@Model.isActive)
        {
            <dd class="text-success">Yes</dd>
        }
        else
        {
            <dd class="text-danger">No</dd>
        }
    }

    <dt>Created at:</dt>
    <dd>@Model.created_at</dd>
</dl>


<a asp-action="Index" class="btn btn-secondary" >Back to list</a>
<a asp-action="Delete" asp-route-id="@Model.customfile_id" class="btn btn-danger">Delete</a>