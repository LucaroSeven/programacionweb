@model CustomFilesCreateViewModel

<h1>Edit User</h1>

<form asp-action="Edit" method="post" enctype="multipart/form-data">

    <input type="hidden" asp-for="customfile_id" />
    <input type="hidden" asp-for="is_active" />
    <input type="hidden" asp-for="created_at" />

    <input asp-for="description" type="text" placeholder="Description" />
    <input asp-for="file" type="file" accept="application/pdf" />

    <div>
        <input asp-for="isActive" type="checkbox" class="" /> <label>Is Active?</label>
    </div>

    <a asp-action="Index" class="btn btn-secondary">Back to list</a>
    <input type="submit" class="btn btn-success" value="Save" />
</form>

